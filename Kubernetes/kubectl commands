kubectl get nodes
kubectl describe node node_name
kubectl get pods
kubectl get svc
kubectl apply -f pod.yaml(file name)
kubectl create pod podname
kubectl delete pod podname
kubectl create svc servicename
kubectl delete svc servicename
kubectl create namespace / ns namespacename
kubectl get ns /namespace
kubectl delete ns namespacename
kubectl apply -f pod.yaml -n namespacename
kubectl get pods -n namespacename
kubectl get rs(replica set)
kubectl delete rs rsname
kubectl get pods -o wide 
kubectl get deploy (deployment)
kubectl delete deploy deployment name 
kubectl rollout undo deployment deployname --to-revision=2
kubectl rollout history deployment deployment name
kubectl exec -it customer(container) /bin/bash
kubectl get pods -l tier=backend
kubectl get pods -l app=packersmovers
kubectl get cm
kubectl describe cm config-mapname
kubectl get ingress
kubectl describe ingress ingressname

